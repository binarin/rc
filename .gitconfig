[user]
	name = Alexey Lebedeff
	email = binarin@binarin.ru

[color]
	ui = true

[url "git@github.com:binarin/"]
     insteadOf = gh:
     pushInsteadOf = gh:

[url "ssh://binarin@review.fuel-infra.org:29418/"]
     insteadOf = fi:
     pushInsteadOf = fi:

[url "ssh://git@gitlab.booking.com"]
        insteadOf = https://gitlab.booking.com

[core]
	autocrlf = false

[alias]
	gfetch = fetch origin '+refs/changes/*:refs/remotes/origin/changes/*'

[push]
	default = simple

[commit]
	template = /home/binarin/.rc/.git-commit-template.txt

[diff]
        compactionHeuristic = true

[pager]
	log = diff-so-fancy | less
	show = diff-so-fancy | less
	diff = diff-so-fancy | less

[interactive]
        diffFilter = diff-so-fancy

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
