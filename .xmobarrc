Config { font = "xft:M+ 1mn:size=8,style=Regular"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopSize L 100 24
       , commands = [ Run Date "%Y-%m-%d %H:%M %a" "date" 600
                    , Run StdinReader
                    , Run Wireless "wlan0" ["-t", "<essid> <qualityvbar>"] 30
                    , Run Battery ["-t", "<acstatus> <leftvbar>", "-h", "green", "-l", "red", "-m", "yellow"] 30
                    , Run Kbd [("us(dvp)", "[us]"), ("ru(dvp)", "[ru]")]
                    , Run Com "xmobar-clock-monitor.sh" [] "orgClock" 50
                    , Run Com "xmobar-workrave-monitor.sh" [] "workrave" 50
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%orgClock%%StdinReader%</fc> }{ %workrave%%kbd% %battery% %wlan0wi% <fc=#ee9a00>%date%</fc> "
       }
